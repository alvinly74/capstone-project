<h2>Sign Up</h2>

<form action="/users" method="post">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <label>
    Username
    <input placeholder="username" type="text" name="user[username]" value="">
  </label>
  <br>
  <label>
    Password
    <input placeholder="password" type="password" name="user[password]" value="">
  </label>
  <br>
  <input type="submit" value="Sign Up">
</form>
<br>
<a href="/session/new">Log in here</a>
